<header class="title">
	{{#equal method 'week'}}
		<h2>{{eventsCount}} <strong>événements</strong> {{formatDate}}</h2> <a class="button button-grey" href="{{prev}}">&lt;</a> <a class="button button-block" href="{{next}}">Semaine prochaine<span class="inner-left">&gt;</span></a>
	{{/equal}}
	{{#equal method 'month'}}
		<h2>{{eventsCount}} <strong>événements</strong> {{formatDate}}</h2> <a class="button button-grey" href="{{prev}}">&lt;</a> <a class="button button-block" href="{{next}}">Mois prochain<span class="inner-left">&gt;</span></a>
	{{/equal}}
</header>
<div id="main-content">
	{{#each events}}
	{{#each this}}
		<div class="md-modal" id="event-{{id}}">
			<div class="md-content">
				<h3><a class="button md-close" href="#">Fermer</a>{{title}}</h3>
				<div class="items">
					<ul>
						<li><span>Lieu</span><span>{{places}}</span></li>
						<li><span>Organisé par</span><span>{{organisations}}</span></li>
						<li><span>Horaires</span><span>{{date_range}}</span></li>
					</ul>
				</div>
				<div class="clearfix">
					<div class="description">
						<p>{{breaklines description}}</p>
					</div>
				</div>
			</div>
		</div>
	{{/each}}
	{{/each}}
	<div class="md-overlay"></div>

	{{#each events}}
	<section class="daily">
		<h3 class="day">{{@key}}</h3>
		<div class="days">
			{{#each this}}
			<article class="event icons-container" class="md-trigger" data-modal="event-{{id}}">
				<div class="bariol-icon circle-icon">&asymp;</div>
				<h4>{{{title}}}</h4>
				<p class="date-range">{{date_range}} / {{places}}</p>
				{{#if description}}
				{{!--<p class="description">{{trimString description}}</p>--}}
				{{/if}}
				{{#if attendee}}
				<div class="add-box">
					<p><a href="#">{{attendee}} personnes y participent.</a></p>
				</div>
				{{/if}}
			</article>
			{{/each}}
		</div>
	</section>
	{{/each}}
</div>